{% extends 'base.html.twig' %}

{% block title %}InternalEntity index{% endblock %}

{% block body %}
    <h1>InternalEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Success</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for internal_entity in internal_entities %}
            <tr>
                <td>{{ internal_entity.id }}</td>
                <td>{{ internal_entity.name }}</td>
                <td>{{ internal_entity.type }}</td>
                <td>{{ internal_entity.success ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('internal_entity_show', {'id': internal_entity.id}) }}">show</a>
                    <a href="{{ path('internal_entity_edit', {'id': internal_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('internal_entity_new') }}">Create new</a>
{% endblock %}
